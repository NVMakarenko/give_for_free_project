<div class="row">
  <div class="col-md-6">
    <%= link_to "Edit", edit_product_path(@product),
    class: "btn btn-primary btn-block" %>
  </div>
  <div class="col-md-6" data-controller="products">
    <%= button_to "Delete", @product, method: :delete,
      data: {action: "click->products#destroy"},
      class: "btn btn-primary btn-block"  %>
  </div>
</div>
